<div class="max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto mt-8 hidden"
    data-notification-action-url="<%= @data.dig(:action, :url) %>"
    data-notification-action-method="<%= @data.dig(:action, :method) %>"
    data-notification-timeout="<%= @data[:timeout] %>" data-controller="notification">
    <div class="rounded-lg shadow-xs overflow-hidden">
        <div class="p-4">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <div class="w-6 <%= @icon_color_class %>">
                        <i class="<%= @icon_class %>"></i>
                    </div>
                </div>
                <div class="ml-3 w-0 flex-1 pt-0.5">
                    <% if @data[:title].present? %>
                    <p class="text-sm leading-5 font-medium <%= @icon_color_class %>">
                        <%= @data[:title] %>
                    </p>
                    <% end %>
                    <% if @data[:messages].present? %>
                    <% @data[:messages].each do |msg| %>
                    <p class="text-sm leading-5 font-medium <%= @icon_color_class %>">
                        <%= msg %>
                    </p>
                    <% end %>
                    <% end %>
                    <% if @data[:body].present? %>
                    <p class="mt-1 text-sm leading-5 text-gray-500">
                        <%= @data[:body] %>
                    </p>
                    <% end %>
                </div>
                <div class="ml-4 flex-shrink-0 flex">
                    <button
                        class="inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150"
                        data-action="click->notification#close">
                        <i class="h-5 w-5 fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
        <% if @data[:countdown] %>
        <div class="bg-indigo-600 rounded-lg h-1 w-0" data-notification-target="countdown"></div>
        <% end %>
    </div>
</div>